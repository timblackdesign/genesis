  <header class="hero flex-col" style="background-image: url({{ section.settings.bg_image | img_url: '2400x' }});">
    {% if section.settings.headline %}
      <h1 class="hero__headline m-0 mb-4">{{ section.settings.headline }}</h1>
    {% else %}
      <h1 class="hero__headline">{{ page.title }}</h1>
    {% endif %}
    {% if section.settings.headline %}
      <span class="hero__subtext">{{ section.settings.subtext }}</span>
    {% endif %}
  </header>